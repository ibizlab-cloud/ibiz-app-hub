{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "ES2022"
    ],
    "rootDir": "src",
    "outDir": "out",
    "declaration": true,
    "declarationDir": "types",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "ES2017",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
